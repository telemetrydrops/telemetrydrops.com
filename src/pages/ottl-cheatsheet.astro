---
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/astro/SectionHeading.astro';
import PDFLeadCaptureForm from '../components/ui/PDFLeadCaptureForm';

const pageTitle = "Free OTTL Quick Reference Cheatsheet";
const pageDescription = "Download your free OpenTelemetry Transformation Language (OTTL) cheatsheet. A compact 3-page reference covering core syntax, essential functions, common patterns, regex, troubleshooting, and best practices.";
---

<Layout
	title={pageTitle}
	description={pageDescription}
	keywords="OTTL, OpenTelemetry, cheatsheet, quick reference, transformation language, syntax, functions"
	canonical="/ottl-cheatsheet"
>
	<div class="flex flex-col w-full">
		<!-- Hero Section -->
		<section class="relative w-full min-h-[90vh] flex flex-col items-center justify-center overflow-hidden bg-telemetria-darker">
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 bg-telemetria-dark">
					<div class="absolute inset-0 opacity-30 bg-[radial-gradient(circle_at_center,rgba(234,88,12,0.1),transparent_70%)]"></div>
				</div>
				<div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-telemetria-orange/30 to-transparent"></div>
			</div>

			<div class="container-custom relative z-10 pt-16 md:pt-20">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<!-- Text Content - Left Side -->
					<div class="animate-fade-in">
						<div class="inline-block mb-4">
							<img
								src="/logo.svg"
								alt="Telemetry Drops Logo"
								class="h-20 w-20 animate-pulse-subtle"
							/>
						</div>
						<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
							Free <span class="bg-gradient-to-r from-telemetria-orange via-orange-400 to-yellow-400 bg-clip-text text-transparent">OTTL</span> Quick Reference
						</h1>
						<p class="text-xl text-white/80 mb-8">
							Master OpenTelemetry Transformation Language with our compact 3-page reference guide. Get instant access to core syntax, essential functions, common patterns, regex patterns, troubleshooting tips, and performance best practices.
						</p>
						<div class="flex flex-col sm:flex-row gap-4">
							<a
								href="#download"
								class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md transition-colors bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90"
							>
								Download Free Cheatsheet
							</a>
						</div>
					</div>

					<!-- PDF Preview - Right Side -->
					<div class="animate-fade-in-right">
						<div class="relative">
							<div class="bg-white rounded-lg shadow-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-300">
								<div class="bg-telemetria-dark rounded-t-md p-4 mb-4">
									<div class="flex items-center gap-2 mb-2">
										<div class="w-3 h-3 bg-red-500 rounded-full"></div>
										<div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
										<div class="w-3 h-3 bg-green-500 rounded-full"></div>
									</div>
									<h3 class="text-telemetria-orange font-bold text-lg">OTTL Quick Reference</h3>
									<p class="text-white/80 text-sm">OpenTelemetry Transformation Language</p>
								</div>
								<div class="space-y-3 text-gray-800 text-sm">
									<div class="border-l-4 border-telemetria-orange pl-3">
										<p class="font-mono text-xs">set(span.status.code, STATUS_CODE_ERROR)</p>
									</div>
									<div class="border-l-4 border-blue-500 pl-3">
										<p class="font-mono text-xs">delete_key(span.attributes, "key")</p>
									</div>
									<div class="border-l-4 border-green-500 pl-3">
										<p class="font-mono text-xs">replace_all_matches(log.body, "\\d", "*")</p>
									</div>
									<div class="border-l-4 border-purple-500 pl-3">
										<p class="font-mono text-xs">IsMatch(target, "pattern")</p>
									</div>
									<div class="text-center py-2 text-gray-500 text-xs">
										• 8 Data Types • 15+ Functions<br>
										• Regex Patterns • Performance Tips<br>
										• 4 Contexts • Troubleshooting Guide
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Key Benefits -->
		<section class="section-padding bg-telemetria-dark">
			<div class="container-custom">
				<SectionHeading
					title="Why You Need This Cheatsheet"
					subtitle="Everything you need for day-to-day OTTL work in a compact 3-page reference"
					centered={true}
				/>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
					<div class="glass-morphism rounded-xl p-6 flex flex-col items-center text-center">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-green-500/10 border border-green-500/20 mb-4">
							<svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Quick Daily Reference</h3>
						<p class="text-white/70 text-sm">
							Everything you need for day-to-day OTTL work in one compact guide. Core syntax, 15+ functions, and 4 telemetry contexts at your fingertips.
						</p>
					</div>

					<div class="glass-morphism rounded-xl p-6 flex flex-col items-center text-center">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-blue-500/10 border border-blue-500/20 mb-4">
							<svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Ready-to-Use Patterns</h3>
						<p class="text-white/70 text-sm">
							Real-world examples including PII redaction, HTTP normalization, and metric conversion patterns you can copy and adapt immediately.
						</p>
					</div>

					<div class="glass-morphism rounded-xl p-6 flex flex-col items-center text-center">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 mb-4">
							<svg class="w-6 h-6 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Troubleshooting & Best Practices</h3>
						<p class="text-white/70 text-sm">
							Complete troubleshooting checklist, performance optimization tips, and safety guidelines to avoid common pitfalls and expensive mistakes.
						</p>
					</div>
				</div>
			</div>
		</section>


		<!-- About the Resource -->
		<section class="section-padding bg-telemetria-dark">
			<div class="container-custom">
				<div class="max-w-4xl mx-auto">
					<SectionHeading
						title="What's Inside the Cheatsheet"
						subtitle="A compact 3-page reference covering everything you need for daily OTTL work"
						centered={true}
					/>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
						<div class="space-y-6">
							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 flex-shrink-0">
									<svg class="w-4 h-4 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">Core Syntax & Data Types</h3>
									<p class="text-white/70 text-sm">Complete syntax reference with 8 data types, operators, precedence rules, and statement structure.</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-blue-500/10 border border-blue-500/20 flex-shrink-0">
									<svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">15+ Essential Functions</h3>
									<p class="text-white/70 text-sm">Editors (set, delete_key, replace_match, limit) and Converters (IsMatch, ParseJSON, Concat, String) with syntax examples.</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-green-500/10 border border-green-500/20 flex-shrink-0">
									<svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">4 Telemetry Contexts</h3>
									<p class="text-white/70 text-sm">Complete path shortcuts for Resource, Span, Log, and Metric/DataPoint contexts with all available fields.</p>
								</div>
							</div>
						</div>

						<div class="space-y-6">
							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-purple-500/10 border border-purple-500/20 flex-shrink-0">
									<svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">Common Patterns & Snippets</h3>
									<p class="text-white/70 text-sm">Real-world examples: PII redaction, HTTP normalization, and metric unit conversion with ready-to-use code.</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-red-500/10 border border-red-500/20 flex-shrink-0">
									<svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">Regex Patterns</h3>
									<p class="text-white/70 text-sm">Common regex patterns for email, IP address, UUID, and URL matching with double backslash syntax for OTTL strings.</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="flex items-center justify-center w-8 h-8 rounded-lg bg-yellow-500/10 border border-yellow-500/20 flex-shrink-0">
									<svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-bold mb-2">Troubleshooting & Performance</h3>
									<p class="text-white/70 text-sm">Complete debugging checklist, performance optimization tips, and safety guidelines with DOs and DON'Ts.</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Lead Capture Form -->
		<section id="download" class="section-padding bg-telemetria-darker">
			<div class="container-custom">
				<div class="max-w-2xl mx-auto">
					<SectionHeading
						title="Get Your Free OTTL Cheatsheet"
						subtitle="Join thousands of engineers and download your comprehensive reference guide"
						centered={true}
					/>

					<div class="mt-12">
						<PDFLeadCaptureForm
							resourceName="OTTL Quick Reference Cheatsheet"
							resourceDescription="Master OpenTelemetry Transformation Language with our compact 3-page reference guide covering core syntax, functions, patterns, regex, and best practices"
							client:load
						/>
					</div>

					<div class="text-center mt-8">
						<p class="text-white/60 text-sm">
							✓ Instant download after submission<br>
							✓ No spam, just valuable content<br>
							✓ Unsubscribe anytime
						</p>
					</div>
				</div>
			</div>
		</section>

	</div>
</Layout>