---
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/astro/SectionHeading.astro';
import VideoEmbed from '../components/astro/VideoEmbed.astro';
import { seoData } from '../data/seo-data';
import { getRandomTestimonials } from '../data/testimonial-data';

const testimonials = getRandomTestimonials(6);
---

<Layout 
	title={seoData.home.title}
	description={seoData.home.description}
	keywords={seoData.home.keywords}
	canonical="/"
	jsonLd={seoData.home.jsonLd}
>
	<div class="flex flex-col w-full">
		<!-- Hero Section -->
		<section class="relative w-full min-h-[90vh] flex flex-col items-center justify-center overflow-hidden bg-telemetria-darker">
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 bg-telemetria-dark">
					<div class="absolute inset-0 opacity-30 bg-[radial-gradient(circle_at_center,rgba(234,88,12,0.1),transparent_70%)]"></div>
				</div>
				<div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-telemetria-orange/30 to-transparent"></div>
			</div>

			<div class="container-custom relative z-10 pt-16 md:pt-20">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<!-- Text Content - Left Side -->
					<div class="animate-fade-in">
						<div class="inline-block mb-4">
							<img 
								src="/logo.svg" 
								alt="Telemetry Drops Logo" 
								class="h-20 w-20 animate-pulse-subtle"
							/>
						</div>
						<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
							Master <span class="bg-gradient-to-r from-telemetria-orange via-orange-400 to-yellow-400 bg-clip-text text-transparent">OpenTelemetry</span> with Expert-Led Training
						</h1>
						<p class="text-xl text-white/80 mb-8">
							Learn from project contributors through hands-on courses, get certified, and advance your career in modern observability and distributed tracing.
						</p>
						<div class="flex flex-col sm:flex-row gap-4">
							<a 
								href="/products"
								class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-md transition-colors bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90"
							>
								Explore our products
							</a>
						</div>
					</div>
					
					<!-- Video - Right Side -->
					<div class="animate-fade-in-right">
						<VideoEmbed 
							videoId="fzunHHA37gM" 
							title="Introduction to OpenTelemetry" 
						/>
					</div>
				</div>
			</div>

			<div class="absolute bottom-10 left-0 right-0 flex justify-center animate-bounce">
				<a href="#products" class="text-white/50 hover:text-white transition-colors">
					<svg class="h-6 w-6 rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
				</a>
			</div>
		</section>

		<!-- Featured Products -->
		<section id="products" class="section-padding bg-background">
			<div class="container-custom">
				<SectionHeading
					title="Our Products"
					centered={true}
				/>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto items-stretch">
					<div class="glass-morphism rounded-xl p-8 flex flex-col h-full">
						<h3 class="text-2xl font-bold mb-4">OTel Specialization</h3>
						<div class="inline-block ml-0 mb-4 px-3 py-1 bg-telemetria-orange/10 border border-telemetria-orange/20 text-xs rounded-full text-telemetria-orange">
							Coming soon
						</div>
						<p class="text-white/80 mb-6">
							Intensive training with closed groups, live mentoring and practical projects. Develop 
							advanced skills in OpenTelemetry with specialized guidance.
						</p>
						<div class="mt-auto">
							<a 
								href="/products#specialization"
								class="inline-flex items-center justify-center w-full px-4 py-2 border border-telemetria-orange/30 text-telemetria-orange hover:bg-telemetria-orange hover:text-telemetria-dark hover:border-telemetria-orange rounded-md transition-colors"
							>
								Learn more 
								<svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<div class="glass-morphism rounded-xl p-8 flex flex-col h-full">
						<h3 class="text-2xl font-bold mb-4">OTel Track</h3>
						<div class="inline-block ml-0 mb-4 px-3 py-1 bg-telemetria-orange/20 border border-telemetria-orange/30 text-xs rounded-full text-telemetria-orange">
							Available now
						</div>
						<p class="text-white/80 mb-6">
							Complete course available at your own pace, with recorded lessons, practical exercises and lifetime access. 
							From basic to advanced in observability and instrumentation.
						</p>
						<div class="mt-auto">
							<a 
								href="/products#track"
								class="inline-flex items-center justify-center w-full px-4 py-2 bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90 rounded-md transition-colors"
							>
								Explore course 
								<svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Why OTel Training Section -->
		<section class="section-padding bg-telemetria-darker">
			<div class="container-custom">
				<SectionHeading
					title="Become the OTel Expert your team relies on in 8 weeks"
					subtitle="Everything you need to know about our comprehensive OpenTelemetry training program"
					centered={true}
				/>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
					<!-- What is this -->
					<div class="glass-morphism rounded-xl p-6 flex flex-col">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 mb-4">
							<svg class="w-6 h-6 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">What is this?</h3>
						<p class="text-white/70 text-sm">
							Comprehensive OpenTelemetry training combining theory and hands-on practice. Learn instrumentation, distributed tracing, metrics, and observability best practices from contributors to the project.
						</p>
					</div>
					
					<!-- Who's it for -->
					<div class="glass-morphism rounded-xl p-6 flex flex-col">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 mb-4">
							<svg class="w-6 h-6 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Who's it for?</h3>
						<p class="text-white/70 text-sm">
							Experienced Software Engineers, SREs, DevOps professionals, and anyone aspiring to become an Observability Engineer. Perfect for teams implementing or improving their observability stack.
						</p>
					</div>
					
					<!-- Why now -->
					<div class="glass-morphism rounded-xl p-6 flex flex-col">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 mb-4">
							<svg class="w-6 h-6 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Why now?</h3>
						<p class="text-white/70 text-sm">
							OpenTelemetry is becoming the industry standard for observability. Organizations are migrating from proprietary solutions, creating high demand for OTel expertise. Be ahead of the curve.
						</p>
					</div>
					
					<!-- What's next -->
					<div class="glass-morphism rounded-xl p-6 flex flex-col">
						<div class="flex items-center justify-center w-12 h-12 rounded-lg bg-telemetria-orange/10 border border-telemetria-orange/20 mb-4">
							<svg class="w-6 h-6 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">What's next?</h3>
						<p class="text-white/70 text-sm">
							Lead observability initiatives, architect telemetry systems, troubleshoot complex distributed systems, and become your organization's go-to expert for all things OpenTelemetry and observability.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Meet Your Instructor Section -->
		<section class="section-padding bg-telemetria-dark">
			<div class="container-custom">
				<SectionHeading
					title="Learn from an OpenTelemetry Leader"
					subtitle="Your instructor brings unparalleled expertise and real-world experience"
					centered={true}
				/>
				
				<div class="max-w-5xl mx-auto mt-12">
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
						<!-- Instructor Photo and Quick Info -->
						<div class="lg:col-span-1">
							<div class="glass-morphism rounded-xl p-6 text-center">
								<div class="w-32 h-32 mx-auto mb-4 rounded-full overflow-hidden border-2 border-telemetria-orange/30">
									<img 
										src="https://github.com/jpkrohling.png" 
										alt="Juraci Paixão Kröhling" 
										class="w-full h-full object-cover"
									/>
								</div>
								<h3 class="text-2xl font-bold mb-2">Juraci Paixão Kröhling</h3>
								<p class="text-telemetria-orange text-sm font-medium mb-4">OpenTelemetry Governance Committee Member</p>
								
								<div class="space-y-3 text-left">
									<div class="flex items-center gap-2 text-sm text-white/70">
										<svg class="w-4 h-4 text-telemetria-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										<span>CNCF Ambassador</span>
									</div>
									<div class="flex items-center gap-2 text-sm text-white/70">
										<svg class="w-4 h-4 text-telemetria-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										<span>OTel Contributor</span>
									</div>
									<div class="flex items-center gap-2 text-sm text-white/70">
										<svg class="w-4 h-4 text-telemetria-orange flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										<span>Co-founder of OllyGarden</span>
									</div>
								</div>
							</div>
						</div>
						
						<!-- Instructor Bio and Achievements -->
						<div class="lg:col-span-2 space-y-6">
							<div class="glass-morphism rounded-xl p-6">
								<h4 class="text-xl font-bold mb-4 text-telemetria-orange">About Your Instructor</h4>
								<div class="space-y-4 text-white/80">
									<p>
										Juraci is a Brazilian software engineer with extensive experience in telemetry systems and a strong commitment to open-source software. Based in Germany since 2011, his career includes significant contributions to companies renowned for their open-source initiatives, such as Red Hat and Grafana Labs.
									</p>
									<p>
										As a member of the OpenTelemetry Governance Committee since 2021 (re-elected in 2023), Juraci's leadership has been instrumental in driving the project's adoption and development. He serves as a CNCF Ambassador and created Dose de Telemetria, providing high-quality content about OpenTelemetry and observability.
									</p>
								</div>
							</div>
							
							<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
								<div class="glass-morphism rounded-xl p-6">
									<h4 class="text-lg font-bold mb-3 flex items-center gap-2">
										<svg class="w-5 h-5 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
										</svg>
										Technical Contributions
									</h4>
									<ul class="space-y-2 text-sm text-white/70">
										<li>• OpenTelemetry Collector Builder (ocb) author</li>
										<li>• OpenTelemetry Operator creator</li>
										<li>• Load-balancer for OTel Collector</li>
										<li>• Tail-sampling processor code owner</li>
										<li>• Emeritus maintainer of Jaeger project</li>
									</ul>
								</div>
								
								<div class="glass-morphism rounded-xl p-6">
									<h4 class="text-lg font-bold mb-3 flex items-center gap-2">
										<svg class="w-5 h-5 text-telemetria-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
										</svg>
										Speaking Experience
									</h4>
									<ul class="space-y-2 text-sm text-white/70">
										<li>• KubeCon EU & NA</li>
										<li>• Open Source Summit</li>
										<li>• Devoxx Belgium</li>
										<li>• FOSDEM</li>
										<li>• Multiple DevOpsDays events</li>
									</ul>
								</div>
							</div>
							
							<div class="bg-telemetria-orange/10 border border-telemetria-orange/20 rounded-xl p-6">
								<p class="text-center text-white/90 italic">
									"With deep expertise in observability and hands-on experience as a top contributor to OpenTelemetry, Juraci brings real-world insights and practical knowledge directly from the project's core development team."
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Testimonials Section -->
		<section class="section-padding bg-telemetria-dark">
			<div class="container-custom">
				<SectionHeading
					title="What Our Students Say"
					subtitle="Learn from professionals who have transformed their observability expertise"
					centered={true}
				/>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
					{testimonials.map((testimonial) => (
						<div class="glass-morphism rounded-xl p-6 flex gap-4 h-full">
							<div class="flex-shrink-0">
								{testimonial.avatarUrl ? (
									<img 
										src={testimonial.avatarUrl} 
										alt={testimonial.author}
										class="w-20 h-20 rounded-full object-cover border-2 border-telemetria-orange/30"
									/>
								) : (
									<div class="w-20 h-20 rounded-full bg-telemetria-orange/20 flex items-center justify-center text-telemetria-orange font-bold text-xl">
										{testimonial.author.split(' ').map(n => n[0]).join('').slice(0, 2)}
									</div>
								)}
							</div>
							
							<div class="flex-1 flex flex-col">
								<div class="mb-3">
									<h4 class="font-semibold text-white">{testimonial.author}</h4>
									<p class="text-sm text-white/60">
										{testimonial.role}{testimonial.company && ` at ${testimonial.company}`}
									</p>
								</div>
								
								<blockquote class="text-white/80 text-sm italic flex-1">
									"{testimonial.quote}"
								</blockquote>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Connect with Us -->
		<section class="section-padding bg-telemetria-darker border-t border-white/5">
			<div class="container-custom text-center">
				<SectionHeading
					title="Connect with Us"
					subtitle="Follow us for updates, tips, and the latest content on OpenTelemetry"
					centered={true}
				/>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a 
						href="https://www.youtube.com/@TelemetryDrops" 
						target="_blank" 
						rel="noopener noreferrer"
						class="inline-flex items-center justify-center px-6 py-3 bg-[#FF0000] hover:bg-[#FF0000]/90 text-white rounded-md transition-colors"
					>
						<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
						</svg>
						Subscribe on YouTube
					</a>
					<a 
						href="https://www.linkedin.com/company/telemetrydrops" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="inline-flex items-center justify-center px-6 py-3 bg-[#0A66C2] hover:bg-[#0A66C2]/90 text-white rounded-md transition-colors"
					>
						<svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						Follow on LinkedIn
					</a>
				</div>
			</div>
		</section>
	</div>
</Layout>
