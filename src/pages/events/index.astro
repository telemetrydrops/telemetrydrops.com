---
import Layout from '../../layouts/Layout.astro';
import SectionHeading from '../../components/astro/SectionHeading.astro';
import { getAllEvents } from '../../data/events-data';
import { seoData } from '../../data/seo-data';

const allEvents = getAllEvents();
---

<Layout
	title={seoData.events.title}
	description={seoData.events.description}
	keywords={seoData.events.keywords}
	canonical="/events"
	jsonLd={seoData.events.jsonLd}
>
	<div class="flex flex-col w-full">
		<!-- Hero Section -->
		<section class="relative w-full min-h-[90vh] flex flex-col items-center justify-center overflow-hidden bg-telemetria-darker">
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 bg-telemetria-dark">
					<div class="absolute inset-0 opacity-30 bg-[radial-gradient(circle_at_center,rgba(234,88,12,0.1),transparent_70%)]"></div>
				</div>
				<div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-telemetria-orange/30 to-transparent"></div>
			</div>

			<div class="container-custom relative z-10 py-20">
				<div class="max-w-4xl mx-auto text-center">
					<div class="animate-fade-in">
						<h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-6">
							Our <span class="bg-gradient-to-r from-telemetria-orange via-orange-400 to-yellow-400 bg-clip-text text-transparent">Events</span>
						</h1>
						<p class="text-xl text-white/80 mb-8 max-w-2xl mx-auto">
							Join expert-led OpenTelemetry workshops and training events. Learn from contributors, master practical skills, and connect with the community.
						</p>
						<div class="mt-8 flex justify-center">
							<a href="#events" class="text-white/70 hover:text-telemetria-orange transition-colors animate-bounce">
								<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Events List -->
		<section id="events" class="section-padding bg-background">
			<div class="container-custom">
				<SectionHeading
					title="Upcoming & Past Events"
					subtitle="Hands-on workshops designed by OpenTelemetry experts"
					centered={true}
				/>

				{allEvents.length === 0 ? (
					<div class="max-w-3xl mx-auto text-center py-12">
						<p class="text-white/70 text-lg mb-6">
							No events currently scheduled. Check back soon for upcoming workshops and training events.
						</p>
						<a
							href="/products"
							class="inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium rounded-md transition-colors bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90"
						>
							Explore Our Courses
						</a>
					</div>
				) : (
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 gap-6 max-w-4xl mx-auto">
						{allEvents.map((event) => (
							<div class="group relative rounded-2xl border border-white/10 bg-telemetria-dark/40 p-8 backdrop-blur transition-all duration-300 hover:border-white/20 hover:bg-telemetria-dark/50">
								<!-- Status Badge -->
								<div class="absolute top-6 right-6">
									{event.status === 'closed' && (
										<span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-500/20 text-red-400 text-xs font-semibold border border-red-500/30">
											<span class="w-1.5 h-1.5 rounded-full bg-red-400"></span>
											Registration Closed
										</span>
									)}
									{event.status === 'open' && (
										<span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-500/20 text-green-400 text-xs font-semibold border border-green-500/30">
											<span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span>
											Accepting Registrations
										</span>
									)}
									{event.status === 'coming-soon' && (
										<span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-yellow-500/20 text-yellow-400 text-xs font-semibold border border-yellow-500/30">
											<span class="w-1.5 h-1.5 rounded-full bg-yellow-400"></span>
											Coming Soon
										</span>
									)}
								</div>

								<div class="grid grid-cols-1 md:grid-cols-[1fr_auto] gap-8">
									<!-- Event Details -->
									<div class="space-y-4">
										<!-- Event Type Badge -->
										<div class="inline-flex">
											<span class="px-3 py-1 rounded-full bg-telemetria-orange/10 text-telemetria-orange text-xs font-semibold uppercase tracking-wide border border-telemetria-orange/30">
												{event.type === 'workshop' && 'Workshop'}
												{event.type === 'conference' && 'Conference'}
												{event.type === 'meetup' && 'Meetup'}
											</span>
										</div>

										<!-- Event Title -->
										<h3 class="text-2xl font-bold text-white mb-2">
											{event.title}
										</h3>

										<!-- Event Description -->
										<p class="text-white/70 leading-relaxed">
											{event.description}
										</p>

										<!-- Event Meta Information -->
										<div class="space-y-3 pt-4">
											<!-- Date -->
											<div class="flex items-start gap-3">
												<svg class="w-5 h-5 text-telemetria-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
												</svg>
												<div class="flex flex-col">
													<span class="text-white font-semibold">{event.displayDate}</span>
													<span class="text-white/60 text-sm">Two consecutive days</span>
												</div>
											</div>

											<!-- Location -->
											<div class="flex items-start gap-3">
												<svg class="w-5 h-5 text-telemetria-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
												</svg>
												<div class="flex flex-col">
													<span class="text-white font-semibold">{event.city}, {event.country}</span>
													<span class="text-white/60 text-sm">{event.location}</span>
												</div>
											</div>

											<!-- Price - Only shown for open or coming-soon events -->
										{event.status !== 'closed' && (
											<div class="flex items-start gap-3">
												<svg class="w-5 h-5 text-telemetria-orange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
												</svg>
												<div class="flex flex-col">
													<span class="text-white font-semibold">{event.price}</span>
													<span class="text-white/60 text-sm">Per participant</span>
												</div>
											</div>
										)}
										</div>
									</div>

									<!-- CTA Section -->
									<div class="flex flex-col items-stretch justify-between md:items-end md:justify-end">
										<a
											href={event.url}
											class={`px-6 py-3 rounded-lg font-semibold transition-all duration-300 text-center whitespace-nowrap ${
												event.status === 'closed'
													? 'bg-white/10 text-white/70 cursor-not-allowed border border-white/20 hover:bg-white/15'
													: 'bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90 border border-telemetria-orange hover:border-telemetria-orange/90'
											}`}
										>
											{event.status === 'closed' ? 'View Details' : 'Learn More'}
										</a>
									</div>
								</div>
							</div>
						))}
					</div>
				)}
			</div>
		</section>

		<!-- CTA Section -->
		<section class="section-padding bg-telemetria-dark">
			<div class="container-custom">
				<div class="max-w-3xl mx-auto text-center">
					<h2 class="text-3xl md:text-4xl font-bold mb-6">Interested in events?</h2>
					<p class="text-white/80 text-lg mb-8">
						If you're interested in our events and workshops, consider exploring our comprehensive courses to deepen your OpenTelemetry knowledge at your own pace.
					</p>
					<div class="flex flex-col sm:flex-row justify-center gap-4">
						<a
							href="/products"
							class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold bg-telemetria-orange text-telemetria-dark hover:bg-telemetria-orange/90 transition-colors"
						>
							Explore Our Courses
						</a>
						<a
							href="mailto:contact@telemetrydrops.com"
							class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold border border-white/20 text-white hover:border-white/40 hover:bg-white/5 transition-colors"
						>
							Contact Us
						</a>
					</div>
				</div>
			</div>
		</section>
	</div>
</Layout>
