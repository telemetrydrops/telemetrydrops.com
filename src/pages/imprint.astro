---
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Imprint - TelemetryDrops"
	description="Legal information and company details for TelemetryDrops (Dose de Telemetria GmbH), provider of OpenTelemetry training courses."
	canonical="/imprint"
>
	<div class="bg-telemetria-dark min-h-screen">
		<div class="container-custom py-16 md:py-24 animate-fade-in">
			<h1 class="text-3xl md:text-4xl font-bold mb-6">Imprint</h1>
			<div class="w-full h-px bg-telemetria-orange/30 mb-8"></div>

			<div class="bg-telemetria-darker border border-white/5 rounded-xl p-6 md:p-8 max-w-3xl">
				<h2 class="text-xl md:text-2xl font-semibold mb-6 text-telemetria-orange">
					Legal Information (Imprint)
				</h2>

				<div class="space-y-8">
					<section>
						<h3 class="text-lg font-medium mb-3">Company Information</h3>
						<p class="text-white/80 mb-2">Dose de Telemetria GmbH</p>
					</section>

					<section>
						<h3 class="text-lg font-medium mb-3">Address</h3>
						<p class="text-white/80 mb-2">Hauptstr. 14</p>
						<p class="text-white/80 mb-2">13158 Berlin</p>
						<p class="text-white/80 mb-2">Germany</p>
					</section>

					<section>
						<h3 class="text-lg font-medium mb-3">Contact</h3>
						<p class="text-white/80 mb-2">E-mail: contact@telemetrydrops.com</p>
						<p class="text-white/80 mb-2">Phone: +49 176 4655-4626</p>
					</section>

					<section>
						<h3 class="text-lg font-medium mb-3">Responsible for Content</h3>
						<p class="text-white/80 mb-2">Juraci Paixão Kröhling</p>
						<p class="text-white/80 mb-2">E-mail: juraci@telemetrydrops.com</p>
					</section>

					<section>
						<h3 class="text-lg font-medium mb-3">Company Registration</h3>
						<p class="text-white/80 mb-2">Registered under number HRB 269671 in the commercial register of Berlin-Charlottenburg</p>
						<p class="text-white/80 mb-2">VAT ID: DE451875565</p>
					</section>
				</div>
			</div>
		</div>
	</div>
</Layout>