---
import { cn } from "../../lib/utils";

export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  className?: string;
}

const { title, subtitle, centered = false, className } = Astro.props;
---

<div class={cn(
  "mb-12",
  centered && "text-center",
  className
)}>
  <h2 class="text-3xl sm:text-4xl font-bold tracking-tight">{title}</h2>
  {subtitle && (
    <p class="mt-3 text-lg text-muted-foreground max-w-3xl">
      {subtitle}
    </p>
  )}
  <div class={cn(
    "h-1 w-20 mt-6 bg-telemetria-orange",
    centered ? "mx-auto" : "ml-0"
  )}></div>
</div>